{
  "name": "@unichain/sdk",
  "version": "1.0.0",
  "description": "Official JavaScript SDK for Unichain blockchain",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "docs": "typedoc src/index.ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "unichain",
    "blockchain",
    "crypto",
    "uni",
    "sdk",
    "typescript"
  ],
  "author": "Unichain Foundation",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/unichain/sdk-js.git"
  },
  "bugs": {
    "url": "https://github.com/unichain/sdk-js/issues"
  },
  "homepage": "https://docs.unichain.org/sdk",
  "dependencies": {
    "axios": "^1.6.0",
    "ws": "^8.14.0",
    "crypto": "^1.0.1",
    "bn.js": "^5.2.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.0",
    "@types/bn.js": "^5.1.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ]
}
